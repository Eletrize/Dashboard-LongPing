/**
 * AAT Multiroom Zone - Child (Component Dimmer)
 *
 * Este driver é opcional. O `Drivers/DriverMultiroom` (parent) pode criar childs
 * usando o driver interno "Generic Component Dimmer", mas este arquivo existe
 * para quem preferir um child customizado no Hubitat.
 *
 * Semântica (igual ao MultiroomFinalDriver):
 * - `setLevel(0..100)` controla volume da zona
 * - `off()` = mute
 * - `on()`  = unmute
 */

metadata {
    definition(name: "AAT Multiroom Zone (Component Dimmer)", namespace: "Eletrize", author: "PH") {
        capability "Switch"
        capability "SwitchLevel"
        capability "Refresh"
        capability "Actuator"
        capability "Sensor"
    }
}

def refresh() {
    parent?.componentRefresh(device)
}

def on() {
    parent?.componentOn(device)
}

def off() {
    parent?.componentOff(device)
}

def setLevel(level) {
    parent?.componentSetLevel(device, level)
}

// Compatibilidade com chamadas que passam duração (dimmer padrão aceita)
def setLevel(level, duration) {
    parent?.componentSetLevel(device, level)
}

// Alias comum em dashboards/integrações
def setVolume(volume) {
    setLevel(volume)
}

