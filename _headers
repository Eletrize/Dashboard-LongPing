# Cache control para Cloudflare Pages

# HTML - sem cache (sempre atualizado)
/*.html
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# CSS e JS - cache curto para desenvolvimento ágil
/*.css
  Cache-Control: public, max-age=300, s-maxage=300
  Pragma: no-cache

/*.js
  Cache-Control: public, max-age=300, s-maxage=300
  Pragma: no-cache

# Root HTML
/
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# Manifest e service worker - sem cache
/manifest.json
  Cache-Control: no-cache, no-store, must-revalidate

/service-worker.js
  Cache-Control: no-cache, no-store, must-revalidate

# Imagens JPG originais - cache 1 ano
/images/Images/*
  Cache-Control: public, max-age=31536000, immutable

# Imagens otimizadas (WebP) - cache 1 ano
/images/optimized/*
  Cache-Control: public, max-age=31536000, immutable

# Ícones - cache 1 ano
/images/icons/*
  Cache-Control: public, max-age=31536000, immutable

# Fontes - cache 1 ano
/fonts/*
  Cache-Control: public, max-age=31536000, immutable

/fonts-raleway.css
  Cache-Control: public, max-age=31536000, immutable

# Functions - CORS handled internally by Functions
# /functions/*
#   Access-Control-Allow-Origin: *
#   Access-Control-Allow-Methods: GET, POST, OPTIONS
#   Access-Control-Allow-Headers: Content-Type
#   Cache-Control: no-cache, no-store, must-revalidate
